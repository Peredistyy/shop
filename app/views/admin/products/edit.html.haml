%div.container
  %div.row
    %div.col-sm-12.col-md-4.col-md-offset-0

      - if @product.errors.any?
        - @product.errors.full_messages.each do |msg|
          %div.alert.alert-warning= msg

      = form_for :product, url: admin_product_path(@product), method: :patch do |f|

        %div.form-group
          = f.label :title
          %br
          = f.text_field :title, class: 'form-control'

        %div.form-group
          = f.label :description
          %br
          = f.text_area :description, class: 'form-control'

        %div.form-group
          = f.label :image
          %br
          = image_tag @product.image.url(:thumb)
          %br
          %br
          = f.file_field :image, class: 'form-control'

        %div.form-group
          = f.label :price
          %br
          = f.number_field :price, class: 'form-control'

        %div.form-group
          = f.submit t('admin.crud.save'), class: 'btn btn-primary'

= link_to t('admin.crud.back'), admin_products_path